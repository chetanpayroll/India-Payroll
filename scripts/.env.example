# ============================================================================
# PayrollNexus-India Environment Configuration
# ============================================================================
# Copy this file to .env and update the values
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL="postgresql://payroll_user:payroll_secret_2025@localhost:5432/payrollnexus?schema=public"

# For Docker (uncomment if running in container)
# DATABASE_URL="postgresql://payroll_user:payroll_secret_2025@postgres:5432/payrollnexus?schema=public"

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL="redis://localhost:6379"

# For Docker (uncomment if running in container)
# REDIS_URL="redis://redis:6379"

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
# ⚠️ IMPORTANT: Change this in production!
JWT_SECRET="your-super-secret-jwt-key-change-in-production-2025"
JWT_EXPIRES_IN="1h"
JWT_REFRESH_EXPIRES_IN="7d"

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
NODE_ENV="development"
PORT=3000

# CORS Settings
CORS_ORIGIN="http://localhost:3001"
CORS_CREDENTIALS=true

# ============================================================================
# FRONTEND SETTINGS
# ============================================================================
NEXT_PUBLIC_API_URL="http://localhost:3000/api/v1"
NEXT_PUBLIC_APP_NAME="PayrollNexus India"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_TELEMETRY_DISABLED=1

# ============================================================================
# FILE STORAGE (Optional)
# ============================================================================
# Local storage
STORAGE_TYPE="local"
STORAGE_PATH="./uploads"

# AWS S3 (if using cloud storage)
# STORAGE_TYPE="s3"
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_REGION="ap-south-1"
# AWS_S3_BUCKET="payrollnexus-files"

# ============================================================================
# EMAIL CONFIGURATION (Optional)
# ============================================================================
# SMTP Settings
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
EMAIL_FROM="noreply@payrollnexus.com"

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL="info"              # debug | info | warn | error
LOG_FORMAT="json"             # json | pretty
LOG_FILE_PATH="./logs"

# ============================================================================
# SECURITY
# ============================================================================
# Encryption key for sensitive data (Aadhaar, etc.)
ENCRYPTION_KEY="32-character-encryption-key-here"

# Session settings
SESSION_SECRET="another-secret-for-sessions-change-this"

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000   # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100   # Max requests per window

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# Enable/disable features
FEATURE_BULK_IMPORT=true
FEATURE_PDF_GENERATION=true
FEATURE_EMAIL_PAYSLIPS=true
FEATURE_AUDIT_LOGGING=true

# ============================================================================
# STATUTORY DEFAULTS (India)
# ============================================================================
# EPF Configuration
EPF_EMPLOYEE_RATE=0.12
EPF_EMPLOYER_RATE=0.12
EPF_WAGE_CEILING=15000
EPF_EPS_RATE=0.0833

# ESI Configuration
ESI_EMPLOYEE_RATE=0.0075
ESI_EMPLOYER_RATE=0.0325
ESI_WAGE_CEILING=21000

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================
# Prisma Studio
PRISMA_STUDIO_PORT=5555

# API Documentation (Swagger)
SWAGGER_ENABLED=true
SWAGGER_PATH="api/docs"

# ============================================================================
# MONITORING & ANALYTICS (Optional)
# ============================================================================
# Sentry (Error tracking)
# SENTRY_DSN="your-sentry-dsn"
# SENTRY_ENVIRONMENT="development"

# Google Analytics
# GA_TRACKING_ID="UA-XXXXXXXXX-X"

# ============================================================================
# PRODUCTION OVERRIDES
# ============================================================================
# When deploying to production, set:
# NODE_ENV="production"
# LOG_LEVEL="warn"
# SWAGGER_ENABLED=false
# Update all secrets (JWT_SECRET, ENCRYPTION_KEY, etc.)
# Use proper database connection string
# Enable SSL/TLS for database
# Configure proper CORS_ORIGIN

# ============================================================================
# NOTES
# ============================================================================
# 1. Never commit .env file to version control
# 2. Keep .env.example updated with new variables
# 3. Use strong secrets in production
# 4. Rotate secrets regularly
# 5. Use environment-specific .env files (.env.development, .env.production)
